<?xml version='1.0' encoding='utf-8'?>
<widget id="qlcl.bentre.admin" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>QLCL Bến Tre Admin</name>
    <description>Ứng dụng QLCL Bến Tre Admin</description>
    <author email="info@dgk.vn" href="https://dgk.vn/">
        Digital Kingdom JSC
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <base href="www/" />
    <preference name="prerendered-icon" value="true" />
    <icon src="res/icon.png"/>

    <platform name="android">
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="32" />

        <icon monochrome="res/android/mipmap-hdpi/ic_launcher.png" background="res/android/mipmap-hdpi/ic_launcher.png" density="hdpi" foreground="res/android/mipmap-hdpi/ic_launcher.png" />
        <icon monochrome="res/android/mipmap-mdpi/ic_launcher.png" background="res/android/mipmap-mdpi/ic_launcher.png" density="mdpi" foreground="res/android/mipmap-mdpi/ic_launcher.png" />
        <icon monochrome="res/android/mipmap-xhdpi/ic_launcher.png" background="res/android/mipmap-xhdpi/ic_launcher.png" density="xhdpi" foreground="res/android/mipmap-xhdpi/ic_launcher.png" />
        <icon monochrome="res/android/mipmap-xxhdpi/ic_launcher.png" background="res/android/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" foreground="res/android/mipmap-xxhdpi/ic_launcher.png" />
        <icon monochrome="res/android/mipmap-xxxhdpi/ic_launcher.png" background="res/android/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" foreground="res/android/mipmap-xxxhdpi/ic_launcher.png" />
    </platform>


    <platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/ios/180.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/ios/60.png" width="60" height="60" />
        <icon src="res/ios/120.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/ios/76.png" width="76" height="76" />
        <icon src="res/ios/152.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="res/ios/40.png" width="40" height="40" />
        <icon src="res/ios/80.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="res/ios/57.png" width="57" height="57" />
        <icon src="res/ios/114.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/ios/72.png" width="72" height="72" />
        <icon src="res/ios/144.png" width="144" height="144" />
        <!-- iPad Pro -->
        <icon src="res/ios/167.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/ios/29.png" width="29" height="29" />
        <icon src="res/ios/58.png" width="58" height="58" />
        <icon src="res/ios/87.png" width="87" height="87" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/ios/50.png" width="50" height="50" />
        <icon src="res/ios/100.png" width="100" height="100" />
        <!-- iTunes Marketing Image -->
        <icon src="res/ios/1024.png" width="1024" height="1024" />
    </platform>

</widget>
